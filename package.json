{
  "name": "aida-metrics",
  "private": false,
  "version": "0.1.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "AI Development Accounting - Monorepo for AIDA metrics tools",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -r --parallel --filter ./packages/* run dev",
    "test": "pnpm -r run test",
    "lint": "pnpm -r run lint",
    "format": "pnpm -r run format",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "publish-packages": "pnpm build && changeset publish",
    "release": "pnpm version-packages && pnpm install && pnpm publish-packages"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "ai",
    "development",
    "metrics",
    "git",
    "analysis"
  ],
  "author": "Francesco Falanga <falanga.fra@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/ceccode/aida-metrics#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ceccode/aida-metrics.git"
  },
  "bugs": {
    "url": "https://github.com/ceccode/aida-metrics/issues"
  }
}